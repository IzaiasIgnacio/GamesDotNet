<div class="modal-body row">
    <div class="col-md-4">
        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, new { @style = "display:block" })
            @Html.TextBoxFor(model => model.Titulo, new { @class = "form-control", @placeholder = "Título", @Value = Model.Titulo })
