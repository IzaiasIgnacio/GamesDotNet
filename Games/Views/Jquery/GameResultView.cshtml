@model Games.Models.ViewModel.GameResultView
<div class="div_resultados resultados_@Model.api container">
    @foreach (var game in Model.ListaJogos) {
        <div class="row">
            <input type="hidden" class="id_@Model.api" value="@game.id" />
            <div class="col-md-1 capa_lista">
                @if (game.thumb != null) {
                    <img src=@game.thumb />
                }
            </div>
            <div class="col-md-11 titulo_lista">@game.name</div>
        </div>
    }
</div>